<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golek RS"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:textSize="25dp"
            android:fontFamily="@font/pmed"
            android:textColor="#0B0B0B"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ada yang bisa kami bantu ?"
            android:fontFamily="@font/pmed"
            android:textSize="20dp"
            android:textColor="#0B0B0B"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pencarian Rumah Sakit melalui Maps"
            android:fontFamily="@font/plight"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"/>

        <EditText
            android:id="@+id/ketikmaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ketik Nama RS "
            android:fontFamily="@font/plight"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="20dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/mapslangsung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cari Rumah Sakit"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/tombol_bulat"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/maps"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/map"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Rekomendasi Rumah Sakit melalui maps"
            android:fontFamily="@font/pmed"
            android:background="@drawable/border_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp"
            android:id="@+id/btnmaps"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/recom"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/checklist"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnrecom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Rekomendasi pilihan rumah sakit favorit"
            android:background="@drawable/border_button"
            android:fontFamily="@font/pmed"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp" />
    </LinearLayout>

</LinearLayout>